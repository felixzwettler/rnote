<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="@APP_ID@" path="@APP_IDPATH@">
    <key name="window-width" type="i">
      <default>-1</default>
      <summary>Default window width</summary>
    </key>
    <key name="window-height" type="i">
      <default>-1</default>
      <summary>Default window height</summary>
    </key>
    <key name="is-maximized" type="b">
      <default>false</default>
      <summary>Default window maximized behaviour</summary>
    </key>
    <key name='color-scheme' type='s'>
      <choices>
        <choice value="default" />
        <choice value="force-light" />
        <choice value="force-dark" />
      </choices>
      <default>"default"</default>
      <summary>Color scheme</summary>
      <description>
        Use the color scheme in the application's UI and in the text area.
      </description>
    </key>
    <key name="workspace-dir" type="s">
      <default>"./"</default>
      <summary>the current workspace directory</summary>
    </key>
    <key name="righthanded" type="b">
      <default>true</default>
      <summary>Wether the user is righthanded (or lefthanded)</summary>
    </key>
    <key name="pen-sounds" type="b">
      <default>false</default>
      <summary>play sounds when drawing with pens</summary>
    </key>
    <key name="touch-drawing" type="b">
      <default>false</default>
      <summary>enable drawing with touch input</summary>
    </key>
    <key name="expand-mode" type="s">
      <choices>
        <choice value="fixed-size"/>
        <choice value="endless-vertical"/>
        <choice value="infinite"/>
      </choices>
      <default>"infinite"</default>
      <summary>Expand mode</summary>
    </key>
    <key name="format-borders" type="b">
      <default>true</default>
      <summary>show format borders</summary>
    </key>
    <key name="pdf-import-width" type="d">
      <default>50.0</default>
      <summary>the pdf import width as percentage to the sheet width</summary>
    </key>
    <key name="pdf-import-as-vector" type="b">
      <default>true</default>
      <summary>enable pdf import as vector image</summary>
    </key>
    <key name="brushpage-selected-color" type="u">
      <default>0</default>
      <summary>the default selected color row on the brush page</summary>
    </key>
    <key name="brushpage-colors" type="(uuuuuuuu)">
      <default>(
        0x000000ff,
        0xffffffff,
        0x99c1f1ff,
        0x1a5fb4ff,
        0x26a269ff,
        0xf6d32dff,
        0xff7800ff,
        0xe01b24ff
      )</default>
      <summary>the brush page colors</summary>
    </key>
    <key name="shaperpage-selected-color" type="u">
      <default>0</default>
      <summary>the default selected color row on the shaper page</summary>
    </key>
    <key name="shaperpage-colors" type="(uu)">
      <default>(
        0x000000ff,
        0x1a5fb4ff
      )</default>
      <summary>the shaper page colors</summary>
    </key>
    <key name="shaperpage-selected-fill" type="u">
      <default>0</default>
      <summary>the default selected fill color row on the shaper page</summary>
    </key>
    <key name="shaperpage-fills" type="(uu)">
      <default>(
        0x000000ff,
        0x00000000
      )</default>
      <summary>the shaper page fill colors</summary>
    </key>
    <key name="resize-lock-aspectratio" type="b">
      <default>false</default>
      <summary>if the aspect ratio while resizing is locked</summary>
    </key>
    <key name="sheet-format" type="s">
      <default>'
        {"width":1123,"height":1587,"dpi":96.0,"orientation":"portrait"}
      '</default>
      <summary>the sheet format</summary>
    </key>
    <key name="sheet-background" type="s">
      <default>'
        {"color":{"r":1.0,"g":1.0,"b":1.0,"a":1.0},"pattern":"dots","pattern_size":[32.0,32.0],"pattern_color":{"r":0.8,"g":0.9,"b":1.0,"a":1.0}}
      '</default>
      <summary>the sheet background</summary>
    </key>
    <key name="pens" type="s">
      <default>'
      '</default>
      <summary>pen settings</summary>
    </key>
  </schema>
</schemalist>